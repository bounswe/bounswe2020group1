<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_product_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TursuGreen"
    android:clickable="true"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-109dp"
        tools:layout_editor_absoluteY="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3F51B5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/x" />

                    <TextView
                        android:id="@+id/textView122"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="20dp"
                        android:background="#3F51B5"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Product Details"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/lin1">


                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/tursu_green"
                    android:popupBackground="@color/white"
                    android:scrollbarThumbHorizontal="@color/TursuGreen"
                    android:scrollbarThumbVertical="@color/TursuGreen"
                    android:spinnerMode="dropdown"
                    android:theme="@style/Spinner2" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/lin3">

                <EditText
                    android:id="@+id/addProduct_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="Name"
                    android:padding="10dp"
                    android:textColor="@color/tursu_green"
                    android:textColorHint="#7777" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/lin4">

                <EditText
                    android:id="@+id/addProduct_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="Description"
                    android:padding="10dp"
                    android:textColor="@color/tursu_green"
                    android:textColorHint="#7777" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/lin5">

                <EditText
                    android:id="@+id/addProduct_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="Brand"
                    android:padding="10dp"
                    android:textColor="@color/tursu_green"
                    android:textColorHint="#7777" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin7"
                android:layout_width="118dp"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lin6">

                <EditText
                    android:id="@+id/addProduct_stock"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="Stock"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/tursu_green"
                    android:inputType="number"
                    android:textColorHint="#7777" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin9"
                android:layout_width="118dp"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lin7">

                <EditText
                    android:id="@+id/addProduct_price"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="Price"

                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:textColor="@color/tursu_green"
                    android:inputType="numberDecimal"
                    android:textColorHint="#7777" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="TL"
                    android:textColor="@color/TursuGreen"
                    android:textColorHighlight="#EDEDED"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/product_add_pick_image"
                android:layout_width="116dp"
                android:layout_height="56dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="30dp"
                android:background="#EEF2F5"
                android:text="CHOOSE IMAGE"
                app:layout_constraintEnd_toStartOf="@+id/linear10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lin9" />

            <Button
                android:id="@+id/addProduct_button"
                android:layout_width="232dp"
                android:layout_height="61dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="70dp"
                android:text="ADD PRODUCT"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear10" />

            <LinearLayout
                android:id="@+id/linear10"
                android:layout_width="208dp"
                android:layout_height="198dp"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingTop="20dp"
                android:paddingRight="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lin7"
                app:layout_constraintTop_toBottomOf="@+id/lin6">>

                <ImageView
                    android:id="@+id/product_add_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_menu_gallery" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>