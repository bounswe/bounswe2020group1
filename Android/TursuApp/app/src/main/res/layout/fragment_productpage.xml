<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".authentication.homepage.ui.productpage.ProductPageFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="387dp"
        android:layout_height="297dp"
        android:layout_margin="20dp"
        android:background="@color/TursuGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Reviews" />

    <TextView
        android:id="@+id/Reviews"
        android:layout_width="181dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="Reviews:"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FreeShippingText" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ProductInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="136dp"
        android:layout_height="165dp"
        android:layout_marginStart="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_name"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/verifiedProduct"
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:background="#FF9800"
        android:gravity="center_vertical"
        android:text="Verified Product"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productImage"
        tools:ignore="MissingConstraints,RtlCompat" />

    <TextView
        android:id="@+id/FreeShippingText"
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="1dp"
        android:background="#858793"
        android:gravity="center"
        android:text="Free Shipping"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/verifiedProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifiedProduct"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ProductInfo"
        android:layout_width="200dp"
        android:layout_height="255dp"
        android:background="@color/TursuGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toEndOf="@+id/productImage"
        app:layout_constraintTop_toTopOf="@+id/productImage"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:padding="15dp"
            android:text="TextView"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/product_description">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/Size"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:paddingStart="15dp"
                    android:text="Size:" />

                <Spinner
                    android:id="@+id/SizeDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/Colors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Colors:" />

                <Spinner
                    android:id="@+id/ColorDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/addShopCart"
            android:layout_width="133dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:text="ADD TO SHOP CART"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/SellerText"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/Seller"
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="Nikea"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/SellerText" />

        <TextView
            android:id="@+id/SellerText"
            android:layout_width="54dp"
            android:layout_height="23dp"
            android:layout_marginEnd="128dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="Seller :"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/addShopCart">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="93dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="167 Reviews:"
                android:textAlignment="center" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="34dp"
            android:layout_height="37dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/addShopCart"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            tools:srcCompat="@drawable/love" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>