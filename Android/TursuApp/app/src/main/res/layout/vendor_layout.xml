<!-- Product01 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vendor01"
    android:layout_width="141dp"
    android:layout_height="238dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_margin="10dp"
    android:background="@drawable/product1"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/img_vendor"
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_vendor"
        android:scaleType="fitCenter" />

    <RatingBar
        android:id="@+id/ratingBarVendor"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/location_product"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center_horizontal" />

    <TextView
        android:id="@+id/name_vendor"
        android:layout_width="109dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="133dp"
        android:gravity="top"
        android:lineSpacingExtra="0sp"
        android:text="deneme"
        android:textColor="#575555"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/location_product"
        android:layout_width="109dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="177dp"
        android:gravity="top"
        android:lineSpacingExtra="4sp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        android:translationY="-1.8sp" />

    <TextView
        android:id="@+id/vendor_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</RelativeLayout>


